<body>

    <div class="container">
        <div class="main">
            <div class="topbar">
                <a href="/auth/user/logout">Logout</a>
                <a href="/">Home</a>

            </div>
            <div class="row">
                <div class="col-md-4 mt-1">
                    <div class="card text-center sidebar">
                        <div class="card-body">
                            <img src="https://marketplace.canva.com/EAFEits4-uw/1/0/1600w/canva-boy-cartoon-gamer-animated-twitch-profile-photo-oEqs2yqaL8s.jpg"
                            class=" rounded-circle" width="150">

                        </div>
                    </div>
                </div>
                <div class="col-md-8 mt-1">
                    <div class="card mb-3 content">
                        <h1 class="m-3 pt-3">About</h1>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Full Name</h5>
                                </div>
                                <div class="col-md-9 text-secondary userName">
                                    <h5>Angela pablo</h5>
                                </div>

                            </div>
                            <hr>

                            <hr>
                        </div>
                    </div>
                    <div class="card mb-3 content">
                        <h1 class="m-3">Works</h1>
                        <div class="card-body app">
                            <div class="row">
                                <div class="col">
                                    <h2>Appointments </h2>
                                    <!-- <div class="appointmentbox"> -->

                                        <% if( appointments.length > 0) { %>
                                            <% for(let i = 0; i <  appointments.length; i++) { %>
                                                <form action="/profile/employee/status" method="get" class="appointmentbox employee">
                                                    <h3><%= appointments[i].userName %> wants to make an appointment with <%= appointments[i].appointmentType == 'doctor' ? appointments[i].appointmentsType :
                                                        appointments[i].appointmentType + " of " + appointments[i].package %> on <%= appointments[i].date %> at <%=  appointments[i].time %></h3>
                                                    <div class="buttons">
                                                        <button value="confirmed" name="status">Confirm Appointment</button>
                                                        <button value="canceled" name="status">Cancel Appointment</button>
                                                        <input type="hidden" name="appId" value="<%= appointments[i]._id %>">
                                                    </div>
                                                </form>
                                            <% } %>
                                        <% } %>
                                    <!-- </div> -->
                                </div>

                                
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h2>Orders </h2>
                                    <!-- <div class="appointmentbox"> -->

                                        <% if( orders.length > 0) { %>
                                            <% for(let i = 0; i <  orders.length; i++) { %>
                                                <form action="/profile/employee/orders" method="get" class="appointmentbox employee">
                                                    <h3><%= orders[i].userId.name.firstName %> ordered a <%= orders[i].prodId.productDetails.Name %> </h3>
                                                    <div class="buttons">
                                                        <button value="Delivered" name="status">Delivered</button>
                                                        <button value="Canceled" name="status">Canceled</button>
                                                        <input type="hidden" name="appId" value="<%= orders[i]._id %>">
                                                    </div>
                                                </form>
                                            <% } %>
                                        <% } %>
                                    <!-- </div> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <div class="updatebox inactive">
                <i class="fa-solid fa-xmark iclose"></i>
